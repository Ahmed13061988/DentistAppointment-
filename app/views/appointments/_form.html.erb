<h1 class="brown-text">Add new Appointment</h1>

    <%= form_for(@appointment) do |f|%>

        <% if @appointment.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @appointment.errors.full_messages.each do |msg| %> 
      <li class="flash-alert">* <%= msg %></li>
    <% end %>
    </ul>
    </div>
    <% end %>

        <%= f.label "Choose a Dentist" %> 
        <%= f.text_field :dentist_id, list: "dentist_autocomplete" %>     
        <datalist id= "dentist_autocomplete">   
        <% Dentist.all.each do |dentist|%>         
             <option value="<%= dentist.name %>">  
             </option>       
        <%end%>      
             </datalist> 

    <br>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :date %>
    <%= f.date_field :date %>
    <br>
    <%= f.label :time %>
    <%= f.time_field :time%>
    <br>
    
    <%= f.submit "Submit" %>

    <% end %>